<p id="notice"><%= notice %></p>

<h1>
	<%= @competition.full_name %>
</h1>


<% @awards.each do |cat, awds| %>
	<div class="category">
		<div class="name">
			<h2><%= cat.name %></h2>
		</div>
		<div class="awards">		
			<% awds.each do |awd| %>
				<%= link_to (image_tag awd.model.photos.first.path, class: "award"), awd.model %>
			<% end %>
		</div>
	</div>
<% end %>


<%= link_to 'Edit', edit_competition_path(@competition) %> |
<%= link_to 'Back', competitions_path %>
